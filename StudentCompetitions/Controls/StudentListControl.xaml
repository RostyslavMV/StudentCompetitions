<ListView x:Class="StudentCompetitions.StudentListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentCompetitions"
             mc:Ignorable="d" 
             MaxWidth="450"
             d:DesignHeight="450" d:DesignWidth="400">
    <ListView.View>
        <GridView>
            <GridViewColumn DisplayMemberBinding="{Binding Name}">Name</GridViewColumn>
            <GridViewColumn DisplayMemberBinding="{Binding Skills[Algebra], StringFormat={}{0:0.00}}">Algebra</GridViewColumn>
            <GridViewColumn DisplayMemberBinding="{Binding Skills[Geometry], StringFormat={}{0:0.00}}">Geometry</GridViewColumn>
            <GridViewColumn DisplayMemberBinding="{Binding Skills[Programming], StringFormat={}{0:0.00}}">Programming</GridViewColumn>
            <GridViewColumn DisplayMemberBinding="{Binding Skills[English], StringFormat={}{0:0.00}}">English</GridViewColumn>
        </GridView>
    </ListView.View>
</ListView>
